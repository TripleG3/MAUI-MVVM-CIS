<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.App.Views.People.PersonDetailsView"
             xmlns:app="clr-namespace:Maui.App"
             xmlns:vm="clr-namespace:Maui.App.ViewModels.People;assembly=Maui.App.ViewModels"
             app:Ioc.BindingContext="{x:Type vm:PersonDetailPageViewModel}"
             x:DataType="{x:Type vm:PersonDetailPageViewModel}">
    <VerticalStackLayout>
        <Label Text="Person Details Page"
               FontSize="24"
               FontAttributes="Bold" />
        <VerticalStackLayout Margin="10">
            <Label Text="{Binding State.SelectedPerson.FirstName}"
                   FontSize="18"
                   FontAttributes="Bold" />
            <Label Text="{Binding State.SelectedPerson.LastName}"
                   FontSize="18"
                   FontAttributes="Bold" />
            <Label Text="{Binding State.SelectedPerson.Age}"
                   FontSize="18"
                   FontAttributes="Bold" />
        </VerticalStackLayout>
        <Label Text="Address:"
               FontSize="24"
               FontAttributes="Bold" />
        <VerticalStackLayout Margin="10">
            <Label Text="{Binding State.SelectedPerson.Address.Street}"
                   FontSize="18"
                   FontAttributes="Bold" />
            <Label Text="{Binding State.SelectedPerson.Address.City}"
                   FontSize="18"
                   FontAttributes="Bold" />
            <Label Text="{Binding State.SelectedPerson.Address.State}"
                   FontSize="18"
                   FontAttributes="Bold" />
            <Label Text="{Binding State.SelectedPerson.Address.ZipCode}"
                   FontSize="18"
                   FontAttributes="Bold" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentView>
