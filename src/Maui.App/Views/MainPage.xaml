<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.App.Views.MainPage"
             xmlns:app="clr-namespace:Maui.App"
             xmlns:vm="clr-namespace:Maui.App.ViewModels;assembly=Maui.App.ViewModels"
             xmlns:command="clr-namespace:Maui.App.ViewModels.Commands;assembly=Maui.App.ViewModels"
             xmlns:pages="clr-namespace:Maui.App.Views.Pages"
             x:DataType="{x:Type vm:MainPageViewModel}"
             app:Ioc.BindingContext="{x:Type vm:MainPageViewModel}">
    <VerticalStackLayout>
        <Label Text="Main Page"
               FontSize="24"
               FontAttributes="Bold" />
        <Button Text="Navigate to People List"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type pages:PersonsPage}"
                Margin="10" />
        <Button Text="Navigate to People List and Details"
                Command="{Binding NavigateCommand}"
                CommandParameter="{x:Type pages:PersonsFullPage}"
                Margin="10" />
    </VerticalStackLayout>
</ContentPage>
